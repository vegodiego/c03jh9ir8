<%= form_for @actor do |f| %>
    <div>
    <label>Nombre:</label>
    <%= f.text_field :name %>
    </div>
    <div>
    <label>Bio:</label>
    <%= f.text_field :bio %>
    </div>
    <div>
    <label>Fecha de nacimiento:</label>
    <%= f.text_field :birth_date %>
    </div>
    <div>
    <label>Lugar de nacimiento:</label>
    <%= f.text_field :birth_place %>
    </div>
    <div>
    <label>Imagen:</label>
    <%= f.text_field :image_url %>
    </div>
    <div>
    <label>Fecha de fallecimiento:</label>
    <%= f.text_field :death_date %>
    </div>
    <div>
    <label>Lugar de fallecimiento:</label>
    <%= f.text_field :death_place %>
    </div>
    <%= f.submit "crear actor" %>
<% end %>
